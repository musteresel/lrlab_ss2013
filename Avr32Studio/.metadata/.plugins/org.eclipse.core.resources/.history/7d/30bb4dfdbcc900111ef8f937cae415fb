#ifndef LR_PWM_H_
#define LR_PWM_H_


#include "pwm.h"

typedef struct
{
        avr32_pwm_channel_t * chan;
        unsigned int fosc;
        unsigned long cprd;
}LR_pwm;

void LR_pwm_init();
void LR_pwm_configure(LR_pwm * pwm, double freq, double duty, unsigned long f);
void LR_pwm_update_freq(LR_pwm * pwm, double freq);
void LR_pwm_update_duty(LR_pwm * pwm, double duty);


#endif /* LR_PWM_H_ */
